            android:icon="@drawable/rmdni">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/ramaadni" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="about_contributor"
        android:title="@string/fortune_about_con" >

        <Preference
            android:title="@string/fortune_about_piyyy"
            android:summary="@string/fortune_about_piyyy_summary"
