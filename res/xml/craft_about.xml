<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/craft_about_title" >

    <PreferenceCategory
        android:key="fortune_about_info"
        android:title="@string/fortune_about_info" />

        <Preference
            android:title="@string/fortune_website_title"
            android:summary="@string/fortune_website_summary"
            settings:layout="@layout/craft_about_card"
            android:icon="@drawable/ic_website">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://fortuneos.web.id" />
        </Preference>

        <Preference
            android:title="@string/fortune_telegram_title"
            android:summary="@string/fortune_telegram_summary"
            settings:layout="@layout/craft_about_card"
            android:icon="@drawable/ic_telegram">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://t.me/FortuneOSChat" />
        </Preference>

        <Preference
            android:title="@string/fortune_github_title"
            android:summary="@string/fortune_github_summary"
            settings:layout="@layout/craft_about_card"
            android:icon="@drawable/ic_github">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/FortuneOS-CAF" />
        </Preference>

        <Preference
            android:key="fortune_changelog"
            android:title="@string/changelog_title"
            android:summary="@string/changelog_summary"
            settings:layout="@layout/craft_about_card"
            android:icon="@drawable/ic_changelog">
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.settings"
                android:targetClass="org.fortune.craft.category.ChangelogActivity"/>
        </Preference>

    <PreferenceCategory
        android:key="about_developer"
        android:title="@string/fortune_about_dev" >

