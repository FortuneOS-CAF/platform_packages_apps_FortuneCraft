<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/craft_title">

    <!-- Status Bar -->
    <Preference
        android:key="craft_statusbar"
        android:title="@string/craft_statusbar_title"
        android:fragment="org.fortune.craft.category.Statusbar"
        android:icon="@drawable/ic_statusbar"
        settings:layout="@layout/craft_card"/>

    <!-- Quick Settings -->
    <Preference
        android:key="craft_quicksettings"
        android:title="@string/craft_quicksettings_title"
        android:fragment="org.fortune.craft.category.QuickSettings"
        android:icon="@drawable/ic_quicksettings"
        settings:layout="@layout/craft_card"/>

    <!-- Navigation -->
    <Preference
        android:key="craft_navigation"
        android:title="@string/craft_navigation_title"
        android:fragment="org.fortune.craft.category.Navigation"
        android:icon="@drawable/ic_navigation"
        settings:layout="@layout/craft_card"/>

    <!-- Lockscreen -->
    <Preference
        android:key="craft_lockscreen"
        android:title="@string/craft_lockscreen_title"
        android:fragment="org.fortune.craft.category.LockScreen"
        android:icon="@drawable/ic_lockscreen"
        settings:layout="@layout/craft_card"/>

    <!-- Misc -->
    <Preference
        android:key="craft_misc"
        android:title="@string/craft_misc_title"
        android:fragment="org.fortune.craft.category.Misc"
        android:icon="@drawable/ic_misc"
        settings:layout="@layout/craft_card"/>

</PreferenceScreen>
