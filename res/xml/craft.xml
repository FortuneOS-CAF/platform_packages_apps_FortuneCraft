<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/craft_dashboard_title">

    <!-- Header -->
    <Preference
        android:key="craft_header"
        settings:layout="@layout/dashboard_header"/>

    <!-- Fortune Team -->
    <Preference
        android:key="team__category"
        android:title="@string/team_title"
        android:summary="@string/team_title_summary"
        android:fragment="org.fortune.craft.fragments.FortuneTeam"
        android:icon="@drawable/ic_fortune_logo"
        settings:layout="@layout/card_sin_tertiary"/>

    <!-- Themes -->
    <Preference
        android:key="themes"
        android:title="@string/themes_title"
        settings:layout="@layout/dashboard_pref_top"
        android:fragment="org.fortune.craft.category.Themes" />

    <!-- Lock screen -->
    <Preference
        android:key="lock_screen"
        android:title="@string/lock_screen_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.LockScreen" />

    <!-- Status bar -->
    <Preference
        android:key="status_bar"
        android:title="@string/status_bar_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.StatusBar" />

    <!-- Quick settings -->
    <Preference
        android:key="quick_settings"
        android:title="@string/quick_settings_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.QuickSettings" />

    <!-- Notifications -->
    <Preference
        android:key="notifications"
        android:title="@string/notifications_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.Notifications" />

    <!-- Power menu -->
    <Preference
        android:key="power_menu"
        android:title="@string/power_menu_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.PowerMenu" />

    <!-- Buttons -->
    <Preference
        android:key="buttons"
        android:title="@string/buttons_title"
        settings:layout="@layout/dashboard_pref_mid"
        android:fragment="org.fortune.craft.category.Buttons" />

    <!-- Miscellaneous -->
    <Preference
        android:key="miscellaneous"
        android:title="@string/miscellaneous_title"
        settings:layout="@layout/dashboard_pref_bot"
        android:fragment="org.fortune.craft.category.Miscellaneous" />
</PreferenceScreen>
